<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLessonActivity">

    <TextView
        android:id="@+id/addLessonTxt"
        android:layout_width="127dp"
        android:layout_height="33dp"
        android:text="Add Lesson"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />

    <EditText
        android:id="@+id/LessonDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="DD/MM/YY"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/addLessonBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addLessonTxt"
        app:layout_constraintVertical_bias="0.513" />

    <EditText
        android:id="@+id/lessonTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="00:00"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/addLessonBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LessonDate"
        app:layout_constraintVertical_bias="0.21" />

    <Button
        android:id="@+id/addLessonBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.853" />

    <Spinner
        android:id="@+id/chooseLessonSubSpinner"
        android:layout_width="293dp"
        android:layout_height="45dp"
        android:entries="@array/subjects"
        app:layout_constraintBottom_toTopOf="@+id/LessonDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addLessonTxt"
        app:layout_constraintVertical_bias="0.393" />

    <EditText
        android:id="@+id/LessonPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NIS"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toTopOf="@+id/addLessonBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lessonTime"
        app:layout_constraintVertical_bias="0.444" />

    <Spinner
        android:id="@+id/chooseLevelSpinner"
        android:layout_width="282dp"
        android:layout_height="41dp"
        android:entries="@array/subj_levels"
        app:layout_constraintBottom_toTopOf="@+id/LessonDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseLessonSubSpinner"
        app:layout_constraintVertical_bias="0.527" />


</androidx.constraintlayout.widget.ConstraintLayout>